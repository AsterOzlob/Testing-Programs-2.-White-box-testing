@page
@model Testing_Programs_2.Pages.XUnitTestsModel
@{
    ViewData["Title"] = "Автоматическое тестирование xUnit";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Автоматическое тестирование с использованием xUnit</h1>
        <a href="/" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Назад к основному тестированию
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Информация о xUnit тестировании</h5>
                </div>
                <div class="card-body">
                    <p>Эта страница запускает автоматические unit-тесты, написанные с использованием фреймворка xUnit.</p>
                    <ul>
                        <li>Тесты проверяют все ветки функции</li>
                        <li>Покрывают граничные случаи</li>
                        <li>Проверяют обработку исключительных ситуаций</li>
                        <li>Автоматически сравнивают ожидаемые и фактические результаты</li>
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Управление тестированием</h5>
                </div>
                <div class="card-body text-center">
                    <form method="post">
                        <button type="submit" class="btn btn-success btn-lg mb-3">
                            <i class="bi bi-play-circle"></i> Запустить xUnit тесты
                        </button>
                    </form>
                    <p class="text-muted small">
                        Нажмите кнопку для запуска автоматического тестирования
                    </p>
                </div>
            </div>
        </div>
    </div>

    @if (Model.TestResults != null && Model.TestResults.Any())
    {
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center bg-dark text-white">
                <h5 class="mb-0">Результаты автоматического тестирования xUnit</h5>
                <span class="badge bg-primary">@Model.TestResults.Count тестов</span>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead class="table-info">
                            <tr>
                                <th>Метод тестирования</th>
                                <th>Тестовые данные (A, B, C, X)</th>
                                <th>Путь/Тест</th>
                                <th>Ожидаемый результат</th>
                                <th>Фактический результат</th>
                                <th>Результат тестирования</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var result in Model.TestResults)
                            {
                                <tr>
                                    <td>@result.TestMethod</td>
                                    <td>@result.Input.A.ToString("F2"), @result.Input.B.ToString("F2"), @result.Input.C.ToString("F2"), @result.Input.X.ToString("F2")</td>
                                    <td class="small">@result.Path</td>
                                    <td>@(double.IsNaN(result.ExpectedResult) ? "NaN" : double.IsInfinity(result.ExpectedResult) ? "∞" : result.ExpectedResult.ToString("F4"))</td>
                                    <td>@(double.IsNaN(result.ActualResult) ? "NaN" : double.IsInfinity(result.ActualResult) ? "∞" : result.ActualResult.ToString("F4"))</td>
                                    <td>
                                        <span class="badge @(result.IsSuccessful ? "bg-success" : "bg-danger")">
                                            @(result.IsSuccessful ? "Успешно" : "Неуспешно")
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                <div class="mt-4">
                    @{
                        var successfulCount = Model.TestResults.Count(r => r.IsSuccessful);
                        var totalCount = Model.TestResults.Count;
                        var successRate = totalCount > 0 ? (double)successfulCount / totalCount * 100 : 0;
                        var successClass = successRate == 100 ? "text-success" : successRate >= 80 ? "text-warning" : "text-danger";
                    }
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body text-center">
                                    <h4 class="@successClass">@successRate.ToString("F1")%</h4>
                                    <p class="text-muted mb-0">Успешных тестов</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body text-center">
                                    <h4 class="@(successfulCount == totalCount ? "text-success" : "text-danger")">
                                        @successfulCount / @totalCount
                                    </h4>
                                    <p class="text-muted mb-0">Пройдено тестов</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    
    @if (Model.LastRunTime.HasValue)
    {
        <div class="mt-3 text-end">
            <small class="text-muted">
                Тестирование выполнено: @Model.LastRunTime.Value.ToString("dd.MM.yyyy HH:mm:ss")
            </small>
        </div>
    }
</div>