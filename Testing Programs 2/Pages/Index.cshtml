@page
@using Testing_Programs_2.Models
@model IndexModel
@{
    ViewData["Title"] = "Тестирование белого ящика";
}

<div class="container mt-4">
    <h1>Тестирование функции методами белого ящика</h1>
    
    <div class="card mb-4">
        <div class="card-header">
            <h5>Функция для тестирования:</h5>
        </div>
        <div class="card-body">
            <p class="mb-1">y = 
                <span class="text-primary">a*x³ + b*x²</span>, при x < 0, b ≠ 0
            </p>
            <p class="mb-1">y = 
                <span class="text-success">(x - a)/(x - c)</span>, при x > 0 и b = 0
            </p>
            <p class="mb-0">y = 
                <span class="text-danger">(x + 5)/(c*(x - 10))</span>, в остальных случаях
            </p>
        </div>
    </div>

    <form method="post">
        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Выберите метод тестирования:</label>
                <select asp-for="SelectedMethod" class="form-select">
                    <option value="@TestingMethod.StatementCoverage">Покрытие операторов</option>
                    <option value="@TestingMethod.DecisionCoverage">Покрытие решений</option>
                    <option value="@TestingMethod.ConditionCoverage">Покрытие условий</option>
                    <option value="@TestingMethod.DecisionConditionCoverage">Покрытие решений/условий</option>
                    <option value="@TestingMethod.CombinatorialConditionCoverage">Комбинаторное покрытие условий</option>
                </select>
            </div>
            <div class="col-md-6 d-flex align-items-end">
                <button type="submit" class="btn btn-primary">Запустить тестирование</button>
            </div>
        </div>
    </form>

    @if (Model.TestResults.Any())
    {
        <div class="card">
            <div class="card-header">
                <h5>Результаты тестирования (@Model.SelectedMethod)</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th>Тестовые данные (A, B, C, X)</th>
                                <th>Путь</th>
                                <th>Ожидаемый результат</th>
                                <th>Фактический результат</th>
                                <th>Результат тестирования</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var result in Model.TestResults)
                            {
                                <tr>
                                    <td>@result.Input.A, @result.Input.B, @result.Input.C, @result.Input.X</td>
                                    <td>@result.Path</td>
                                    <td>@result.ExpectedResult.ToString("F4")</td>
                                    <td>@result.ActualResult.ToString("F4")</td>
                                    <td>
                                        <span class="badge @(result.IsSuccessful ? "bg-success" : "bg-danger")">
                                            @(result.IsSuccessful ? "Успешно" : "Неуспешно")
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                <div class="mt-3">
                    @{
                        var successfulCount = Model.TestResults.Count(r => r.IsSuccessful);
                        var totalCount = Model.TestResults.Count;
                        var successRate = (double)successfulCount / totalCount * 100;
                    }
                    <p class="mb-0">
                        <strong>Статистика:</strong> @successfulCount из @totalCount тестов пройдены успешно 
                        (@successRate.ToString("F1")%)
                    </p>
                </div>
            </div>
        </div>
    }
</div>